<launch>
  <arg name="param_file" default="$(find-pkg-share cuda_ndt_matcher_launch)/config/ndt_scan_matcher.param.yaml"/>

  <!-- Input Topics -->
  <arg name="input_pointcloud" default="points_raw" description="Sensor points topic"/>
  <arg name="input_initial_pose_topic" default="ekf_pose_with_covariance" description="Initial position topic"/>
  <arg name="input_regularization_pose_topic" default="regularization_pose_with_covariance" description="Regularization pose topic"/>
  <arg name="input_map_topic" default="pointcloud_map" description="Point cloud map topic"/>

  <!-- Output Topics -->
  <arg name="output_pose_topic" default="ndt_pose" description="Estimated pose"/>
  <arg name="output_pose_with_covariance_topic" default="ndt_pose_with_covariance" description="Estimated pose with covariance"/>

  <!-- Services -->
  <arg name="input_service_trigger_node" default="trigger_node_srv" description="Trigger node service"/>

  <!-- Node Configuration -->
  <arg name="node_name" default="ndt_scan_matcher" description="Node name"/>

  <node pkg="cuda_ndt_matcher" exec="cuda_ndt_matcher" name="$(var node_name)" output="both">
    <!-- Input Remaps -->
    <remap from="points_raw" to="$(var input_pointcloud)"/>
    <remap from="ekf_pose_with_covariance" to="$(var input_initial_pose_topic)"/>
    <remap from="regularization_pose_with_covariance" to="$(var input_regularization_pose_topic)"/>
    <remap from="pointcloud_map" to="$(var input_map_topic)"/>

    <!-- Output Remaps -->
    <remap from="ndt_pose" to="$(var output_pose_topic)"/>
    <remap from="ndt_pose_with_covariance" to="$(var output_pose_with_covariance_topic)"/>

    <!-- Service Remaps -->
    <remap from="trigger_node_srv" to="$(var input_service_trigger_node)"/>

    <param from="$(var param_file)"/>
  </node>
</launch>
